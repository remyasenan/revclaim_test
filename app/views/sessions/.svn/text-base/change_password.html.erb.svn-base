<h3>Changing Password</h3>

<%= form_tag( :action => 'change_password') %>

<table>
  <tr>
    <td>
      Enter New Password
    </td>
    <td>
      <%= password_field "password", "new", :size => 20 %>
    </td>
  </tr>
  <tr>
    <td>
      Retype Password
    </td>
    <td>
      <%= password_field "password", "retyped", :size => 20 %>
    </td>
  </tr>
</table>
<%= submit_tag "Change", :class => "button" %><br/><br/>
<%= link_to 'Cancel', :action => 'dashboard' %>

