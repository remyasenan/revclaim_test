<div id="login_main">
<h1>Reject Job</h1>

      <% form_tag({:action => 'add',:batch => @batch ,:tiff => @tiff ,:check => @check ,:payer => @payer ,:facility => @facility }, :multipart => true)  do %>
  <table>  
    <tr>
      <td>Upload File</td>
      <td>File description</td>
    </tr>
    <tr>
      <td><%= file_field "upload", "file"%> </td>
      <td><%= text_field_with_auto_complete :file_upload_comment, :comment%></td>
      <td> <%= submit_tag "Import", :class => 'button' %> </td>
    </tr>
  </table>
<% end %>
<br/>
<% form_tag :action=>"add_rejection_comment" ,:batch => @batch ,:job => @job ,:tiff => @tiff ,:check => @check do %>
  <table>
    <tr>
      <th>Rejection Comments</th>
    </tr>
    <tr>
      <td>
        <%= text_field_with_auto_complete :batch_rejection_comment, :comment%>
      </td>
      <td>
        <%= submit_tag "Reject", :class => "button" %>
      </td>
    </tr>
  </table>
<% end %>
<%= link_to "Back", :action => 'view_completed_jobs' %>
</div>