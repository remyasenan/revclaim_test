<%#
# To change this template, choose Tools | Templates
# and open the template in the editor.
%>
<%= javascript_include_tag "ans_cms" %>
<div style="font-family:Arial,Helvetica,sans-serif;font-size: 12;background-color: #f0f0f0;color: #676767;"><%= will_paginate @patient_informations %></div>
<table width="100%" border="1" align="center" cellpadding="0" cellspacing="0" bordercolor="#9C914B" class="content" style="border-collapse:collapse; font-family:'Trebuchet MS', Arial; font-size:11px;">
    <th>
        Insured ID
    </th>
    <th>
        Relationship
    </th>
    <th>
        Last Name
    </th>
    <th>
        First name
    </th>
    <th>
        Date of Birth
    </th>
    <th>
        Address
    </th>
    <th>
        State
    </th>
    <th>
        Zipcode
    </th>
        

    <%if @patient_informations %>
          <% for result in @patient_informations %>

                <tr>
              <td align="left" valign="top" bgcolor="#ECE9D8" class="content">
                 <%= result.insured_id %>
              </td>
              <td align="left" valign="top" bgcolor="#ECE9D8" class="content">
               <%= result.relationship  %>
              </td>
              <td align="left" valign="top" bgcolor="#ECE9D8" class="content">
                <%= result.lastname %>
              </td>
              <td align="left" valign="top" bgcolor="#ECE9D8" class="content">
                <%= result.firstname  %>
              </td>
              <td align="left" valign="top" bgcolor="#ECE9D8" class="content">
               <%= result.dob%>
              </td>
              <td align="left" valign="top" bgcolor="#ECE9D8" class="content">
                <%= result.address %>
              </td>
              <td align="left" valign="top" bgcolor="#ECE9D8" class="content">
                <%= result.state %>
              </td>
              <td align="left" valign="top" bgcolor="#ECE9D8" class="content">
                <%= result.zipcode %>
              </td>
              <td width="20px">

                <%= radio_button "post","","category",:onclick => "submit_patient_info('#{params[:batch_type]}',#{params[:batchid]},#{params[:jobid]},#{result.id})" %>
              </td>
          </tr>
        
       <%end %>
    <% else  %>
    No patient information available
    <%end %>
    
</table>