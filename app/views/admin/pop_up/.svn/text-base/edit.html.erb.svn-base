<div id="login_main">
  <h1>Edit Comment</h1>
  
  <% form_tag :action => 'update', :id => @error_popups do %>
    <table>
      <tr>
        <th>End Date</th>
        <th>Comments</th>
      </tr>
      <tr>
        <td valign = "top"><%= text_field_tag 'end_date', @error_popups.end_date, :style => "width:60px;",:class => 'black_text' %>&nbsp;<%= date_picker("end_date", "ymd", "-") %></td>
        <td><%= text_area_tag 'comment', @error_popups.comment, :id => 'comment', :cols => '40', :rows => '4', :class => 'black_text'%></td>
      </tr>
    </table>
    <%= submit_tag 'Edit', :class => 'button' %>
  <% end %>
  
  <br/>
  <%= link_to image_tag("arrow_undo.png", :alt => "Back"), :action => 'add_message'%>
</div>